//‐---------‐-------‐----------------------------------------

void repartiR(int mazo[], int mano[])
{
	
	srand(time(NULL));
	
	do
    {
      carta = (rand() % 3)+1; 
      
     } 
     while(mazo[carta-1] == 0);
    
     mazo[carta-1] = 0;
     
     
 }    
	
